/* *********************************************************************************************** */

// #shader_type fragment

#version 300 es

/* *********************************************************************************************** */

// Illegal use of reserved word `sampler1D'
uniform sampler1D stipple_texture;

/* *********************************************************************************************** */

// #version 150 required for using interface blocks
in vec4 vertex_colour;
in float vertex_stipple_position;

/* *********************************************************************************************** */

out vec4 fragment_colour;

/* *********************************************************************************************** */

void main()
{
  vec4 stipple_colour = texture(stipple_texture, vertex_stipple_position);
  if (stipple_colour.x == .0)
    discard;
  fragment_colour = vertex_colour;
}

